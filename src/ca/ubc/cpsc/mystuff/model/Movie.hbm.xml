<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ca.ubc.cpsc.mystuff.model.Movie" table="Movie">
		<id name="itemID" column="itemID">
			<generator class="assigned"/>
		</id>
		<property name="title" column="title"/>
		<property name="genre" column="genre"/>
		<property name="rating" column="rating"/>
		<property name="image" column="image"/>
		<property name="overview" column="overview"/>
		<list name="commentID" table="movie_commentID">
			<key column="itemID"/>
			<list-index column="index"/>
			<element type="integer" column="commentID" not-null="true"/>
		</list>	
   </class>
</hibernate-mapping>